<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card3"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingDp"
                android:text="Contacts"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/titleSize"
                android:fontFamily="@font/newscycleregular"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_below="@id/Title3"
                android:layout_margin="@dimen/marginDp"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/Text3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Title3"
                android:layout_toRightOf="@id/logo"
                android:gravity="center"
                android:padding="@dimen/paddingDp"
                android:text="@string/cardview3_business"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/textSize"/>

            <ImageView
                android:id="@+id/phone"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_below="@id/logo"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/halfMarginDp"
                android:layout_marginBottom="@dimen/halfMarginDp"
                android:layout_marginLeft="@dimen/marginDp"
                android:layout_marginRight="@dimen/marginDp"
                android:src="@drawable/phone"/>

            <TextView
                android:id="@+id/Text3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text3_1"
                android:layout_toEndOf="@+id/phone"
                android:layout_toRightOf="@id/phone"
                android:gravity="center_vertical"
                android:autoLink="phone"
                android:padding="@dimen/halfPaddingDp"
                android:text="@string/cardview3_phone"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/textSize"/>

            <ImageView
                android:id="@+id/directions"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_below="@id/phone"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/marginDp"
                android:src="@drawable/directions"/>

            <TextView
                android:id="@+id/Text3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text3_3"
                android:layout_toEndOf="@+id/directions"
                android:layout_toRightOf="@id/directions"
                android:layout_toStartOf="@id/Image3"
                android:gravity="center_vertical"
                android:autoLink="map"
                android:paddingTop="@dimen/paddingDp"
                android:text="@string/cardview3_address1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/textSize"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/linearbackground3"
                app:civ_border_width="2dp"
                app:civ_border_color="#00000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/marginDp"
                android:layout_marginStart="@dimen/marginDp"
                android:layout_marginBottom="@dimen/marginDp"
                android:layout_marginTop="@dimen/marginDp"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/Link3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text3_2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/marginDp"
                android:layout_marginStart="@dimen/marginDp"
                android:layout_marginBottom="@dimen/halfMarginDp"
                android:layout_marginTop="@dimen/oneandhalfMarginDp"
                android:text="@string/cardview3_go"
                android:textAllCaps="true"
                android:background="@android:color/transparent"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/textSize"
                android:autoLink="web"
                android:onClick="goToWebsite"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>