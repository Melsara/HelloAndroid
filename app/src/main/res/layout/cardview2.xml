<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card2"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingDp"
                android:text="Forum"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/titleSize"
                android:fontFamily="@font/newscycleregular"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Title2"
                android:layout_toStartOf="@+id/Image2"
                android:padding="@dimen/paddingDp"
                android:text="Open discussion on any topic related to the courses. Watch out to be updated on latest news."
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/textSize"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/linearbackground2"
                app:civ_border_width="2dp"
                app:civ_border_color="#00000000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/marginDp"
                android:layout_marginStart="@dimen/marginDp"
                android:layout_marginBottom="@dimen/marginDp"
                android:layout_marginTop="@dimen/marginDp"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/Link2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Image2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/marginDp"
                android:layout_marginStart="@dimen/marginDp"
                android:layout_marginBottom="@dimen/halfMarginDp"
                android:layout_marginTop="@dimen/oneandhalfMarginDp"
                android:text="@string/cardview2_go"
                android:textAllCaps="true"
                android:background="@android:color/transparent"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/textSize"
                android:autoLink="web"
                android:onClick="goToForum"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>